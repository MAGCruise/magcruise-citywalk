<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration status="OFF">
    <Properties>
        <property name="log_dir">${web:rootDir}/tmp</property>
        <property name="pattern_loc">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %c.%M(%F:%L) %m%n
        </property>
        <property name="pattern">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %c{3.} %m%n
        </property>
    </Properties>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern_loc}" />
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY"
                    onMismatch="ACCEPT" />
            </Filters>
        </Console>
        <Console name="stderr" target="SYSTEM_ERR">
            <PatternLayout pattern="${pattern_loc}" />
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" />
            </Filters>
        </Console>
        <RollingFile name="rolling" fileName="${log_dir}/app.log"
            filePattern="${log_dir}/app-%d{yyyy-MM-dd}-%i.zip">
            <PatternLayout pattern="${pattern_loc}" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="stdout" />
            <AppenderRef ref="stderr" />
        </Root>
        <Logger name="org.magcruise" level="DEBUG" additivity="false">
            <AppenderRef ref="stdout" />
            <AppenderRef ref="stderr" />
        </Logger>
        <Logger name="org.nkjmlab" level="DEBUG" additivity="false">
            <AppenderRef ref="stdout" />
            <AppenderRef ref="stderr" />
        </Logger>
    </Loggers>
</configuration>
